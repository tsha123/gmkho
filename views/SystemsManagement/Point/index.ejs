<!DOCTYPE html>


<html lang="en">

<head>

    <%- include('../../header',{title:"Quản lý tích điểm"}) %>

        <div class="page-content">
            <div class="header-table">
               
            </div>
            <div class="container-fluid">
                <div  class="div-table">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <td>STT</td>
                                <td>Số điểm</td>
                                <td>Giá trị</td>
                                <td>Chỉnh sửa</td>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div id="divPagination"></div>
            </div>
        </div>
        <!-- POPUP ====================================-->

        <div id="popupEdit" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Chỉnh sửa điểm <i class="mdi mdi-database-plus"></i></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                        <div class="modal-body">
                            <label>Số điểm</label>
                            <input class="form-control number" oninput="inputNumber(this)" placeholder="Nhập số điểm" value="0">
                            <label>Gía trị</label>
                            <input class="form-control number" oninput="inputNumber(this)" placeholder="Nhập gí trị điểm" value="0">
                        </div>
                        <div class="modal-footer">
                            <button type="button" id="btnConfirmEdit" class="btn btn-primary">Lưu chỉnh sửa</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
