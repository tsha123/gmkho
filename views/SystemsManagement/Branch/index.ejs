                                <input class="form-control" id="editPhone" placeholder="Nhập số điện thoại của chi nhánh">
                            </div>
                            <div class="col-12 col-md-4">
                                <b>Tiêu đề phiếu in</b>
                                <input class="form-control" id="editHeader" placeholder="Nhập tiêu đề khi in phiếu">
                            </div>
                            <div class="col-12 col-md-12">
                                <b>Ghi chú in phiếu</b>
                                <input class="form-control" id="editNote" placeholder="Nhập ghi chú khi in phiếu">
                            </div>
                            <div class="col-6 col-md-6">
                                <b>Địa chỉ</b>
                                <input class="form-control" id="editAddress" placeholder="Nhập địa chỉ chi nhánh">
                            </div>
                            <div  class="col-6 col-md-3 div-wifi">
                                <b>IP WIFI <i class="mdi mdi-wifi"></i></b>
                                <input class="form-control" id="ipwifi_edit" onkeypress="add_list_wifi()" type="text" placeholder="Nhập địa chỉ wifi chấm công">
                                <div onclick="get_ip_wifi()" class="btn btn-primary">
                                    <i class="fas fa-wifi"></i>
                                    <span class="hide-on-mobile hide-on-tablet">Lấy IP</span>
                                </div>
                                <div id="list_edit_wifi" class="list-wifi">

                                </div>
                            </div>
                            <div class="col-12 col-md-3">
                                <b>Muộn tối đa <i class="mdi mdi-wifi"></i></b>
                                <input class="number form-control" id="late_limit_edit" oninput="inputNumber(this)" placeholder="Nhập địa chỉ wifi chấm công">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 col-sm-6 col-md-3">
                            <label>Giờ vào sáng </label>
                            <input class="form-control" id="in_morning_edit" type="time">
                        </div>
                        <div class="col-6 col-sm-6 col-md-3">
                            <label>Giờ ra sáng</label>
                            <input class="form-control" id="out_morning_edit" type="time">
                        </div>
                        <div class="col-6 col-sm-6 col-md-3">
                            <label>Giờ vào chiều</label>
                            <input class="form-control" id="in_afternoon_edit" type="time">
                        </div>
                        <div class="col-6 col-sm-6 col-md-3">
                            <label>Giờ ra chiều</label>
                            <input class="form-control" id="out_afternoon_edit" type="time">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 col-sm-6 col-md-3">
                            <label>Vào trực trưa</label>
                            <input class="form-control" id="in_noon_schedule_edit" type="time">
                        </div>
                        <div class="col-6 col-sm-6 col-md-3">
                            <label>Ra trực trưa</label>
                            <input class="form-control" id="out_noon_schedule_edit" type="time">
                        </div>
                        <div class="col-6 col-sm-6 col-md-3">
                            <label>Vào trực tối</label>
                            <input class="form-control" id="in_night_schedule_edit" type="time">
                        </div>
                        <div class="col-6 col-sm-6 col-md-3">
                            <label>Ra trực tối</label>
                            <input class="form-control" id="out_night_schedule_edit" type="time">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 col-sm-6 col-md-6">
                            <label>Địa chỉ trên map (link)</label>
                            <input class="form-control" placeholder="nhập link google map" id="map_address_edit" type="text">
                        </div>
                        <div class="col-6 col-sm-6 col-md-3">
                            <label>Email </label>
                            <input class="form-control" placeholder="nhập email" id="email_edit" type="text">
                        </div>
                        <div class="col-6 col-sm-6 col-md-3">
                            <label>Giờ hoạt động</label>
                            <input class="form-control" placeholder="giờ hoạt động của chi nhánh" id="time_active_edit" type="text">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-6 div-image-branch">
                            <b>Logo</b>
                            <img onclick="changeImage('inputEditLogo')" id="logoEdit">
                            <input oninput="paste_Image(this,'logoEdit')" id="inputEditLogo" type="file" accept="image/*">
                        </div>
                        <div class="col-12 col-md-6 div-image-branch">
                            <b>Ảnh</b>
                            <img id="imageEdit" onclick="changeImage('inputEditImage')">
                            <input oninput="paste_Image(this,'imageEdit')" id="inputEditImage" type="file" accept="image/*">
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" id="confirmEdit" class="btn btn-danger">Chỉnh sửa</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    </div>
                </div>
            </div>
        </div>
